---
import Image from "astro/components/Image.astro";

interface Props {
  classes: string;
  id: number;
  src: string;
  height: number;
  width: number;
  alt: string;
  loading: "eager" | "lazy" | null | undefined;
}

const { classes, id, src, height, width, alt, loading } = Astro.props;
---

<!-- Your template here! -->
<Image
  class={`${classes}`}
  src={src}
  height={height}
  width={width}
  alt={alt}
  loading={loading}
  transition:name={`image-character-${id}`}
/>

