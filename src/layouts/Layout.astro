*/

interface Props {
  title: string;
  otherLink?: {
    url: string;
    title: string;
  };
}

const { title, otherLink } = Astro.props;

const propsParticles = {
  id: "tsparticlesfullpage",
  background: "transparent",
  minSize: 0.6,
  maxSize: 1.4,
  particleDensity: 50,
  particleColor: "#000000",
};

const propsParticlesDark = {
  ...propsParticles,
  particleColor: "#fff",
  id: "tsparticlesfullpage2",
};
