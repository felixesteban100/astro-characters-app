<html lang="en">
  <head transition:animate={fade({ duration: "15s" })}>
    <ViewTransitions />
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="absolute inset-0 -z-10 min-h-screen">
      <SparklesCore transition:persist client:visible {...propsParticles} />
      <SparklesCore transition:persist client:visible {...propsParticlesDark} />
    </div>
    <main class="w-[80vw] mx-auto">
      <!-- <nav class="bg-background w-full border-b border-foreground/20 mb-5">
        
      </nav> -->
      <div
        class="flex items-center justify-between md:justify-start mx-auto py-4 gap-5"
      >
        <a href="/"
          ><p class="text-primary font-bold text-stroke-custom">ASTRO ðŸš€</p></a
        >
        <NavLinks
          otherClassesContainer="hidden md:flex"
          title={title}
          otherLink={otherLink}
        />
        <SheetNav client:load>
          <NavLinks
            otherClassesContainer="flex"
            title={title}
            otherLink={otherLink}
          />
        </SheetNav>
        <!-- <ModeToggle client:load /> -->
      </div>
      <div class="mx-auto">
        <slot />
      </div>
    </main>
  </body>
</html>
